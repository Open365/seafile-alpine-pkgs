# Maintainer: Vishesh Handa <me@vhanda.in>
pkgname=seafdav
pkgver=5.0.5
pkgrel=1
pkgdesc="webdav for Seafile"
url="https://github.com/Open365/seafav/"
arch="noarch"
license="Apache"
depends="seafile-server seafobj"

source="$pkgname-$pkgver.zip::https://github.com/Open365/seafdav/archive/open365.zip"
install=""

_builddir="${srcdir}/seafdav-open365"

prepare() {
	local pf
	cd "${_builddir}"
	for pf in $source; do
		case $pf in
		*.patch) msg $pf; patch -p1 -i "$srcdir"/${pf} || return 1;;
		esac
	done
}

build() {
	echo
}

package() {
	cd "${_builddir}"
	mkdir -m 755 -p "${pkgdir}"/usr/share/seafdav || return 1
	cp -ar "${_builddir}"/* "${pkgdir}"/usr/share/seafdav
}
